<body>
    <div class="container">
        <h1>Age Calculator and Day of the Week Finder</h1>
        <label for="birthdate">Enter your birthdate:</label>
        <input type="date" id="birthdate">
        <label for="scale">Select a scale:</label>
        <select id="scale">
            <option value="years">Years</option>
            <option value="months">Months</option>
            <option value="days">Days</option>
        </select>
        <button onclick="calculateAgeAndDay()">Calculate</button>
        <div id="result"></div>
    </div>

    <script>
        function calculateAgeAndDay() {
            const birthdate = new Date(document.getElementById("birthdate").value);
            const scale = document.getElementById("scale").value;
            const currentDate = new Date();
            const timeDifference = currentDate - birthdate;
            let result = '';

            if (scale === "years") {
                const years = Math.floor(timeDifference / (365.25 * 24 * 60 * 60 * 1000));
                result = `You are ${years} years old.`;
            } else if (scale === "months") {
                const months = Math.floor(timeDifference / (30.44 * 24 * 60 * 60 * 1000));
                result = `You are ${months} months old.`;
            } else if (scale === "days") {
                const days = Math.floor(timeDifference / (24 * 60 * 60 * 1000));
                result = `You are ${days} days old.`;
            }

            const daysOfWeek = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
            const dayOfWeek = daysOfWeek[birthdate.getDay()];
            result += ` Your birthdate falls on a ${dayOfWeek}.`;

            document.getElementById("result").textContent = result;
        }
    </script>
</body>
